<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatFrame" id="login_frame">
		<property name="title" translatable="yes">Login</property>
		<widget class="SwatForm" id="login_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Username</property>
				<widget class="SwatEntry" id="username">
					<property name="required" type="boolean">true</property>
					<property name="size" type="integer">25</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Password</property>
				<widget class="SwatPasswordEntry" id="password">
					<property name="required" type="boolean">true</property>
					<property name="size" type="integer">25</property>
				</widget>
			</widget>
			<widget class="SwatMessageDisplay" id="message_display">
			</widget>
			<widget class="SwatFormFooterField">
				<widget class="SwatButton" id="login_button">
					<property name="title" translatable="yes">Login</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
