<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="index_frame">

		<widget class="SwatToolLink">
			<property name="title" translatable="yes">Edit Component</property>
			<property name="link">AdminComponents/Edit?id=%s</property>
			<property name="stock_id" type="string">edit</property>
		</widget>
		<widget class="SwatFieldset">
			<property name="title" type="string">Description</property>
			<widget class="SwatContentBlock" id="component_description">
			</widget>
		</widget>
		<widget class="SwatDetailsView" id="component_details">
			<object class="SwatDetailsViewField" id="title">
				<property name="title">Title</property>
				<object class="SwatTextCellRenderer" id="title_renderer">
					<property name="value" type="data">title</property>
				</object>
			</object>
			<object class="SwatDetailsViewField" id="shortname">
				<property name="title">Short Name</property>
				<object class="SwatTextCellRenderer" id="shortname_renderer">
					<property name="value" type="data">shortname</property>
				</object>
			</object>
			<object class="SwatDetailsViewField" id="section">
				<property name="title">Section</property>
				<object class="SwatTextCellRenderer" id="section_renderer">
					<property name="value" type="data">section_title</property>
				</object>
			</object>
			<object class="SwatDetailsViewField" id="show">
				<property name="title">Show in Menu?</property>
				<object class="SwatCheckCellRenderer" id="show_renderer">
					<property name="value" type="data">show</property>
				</object>
			</object>
			<object class="SwatDetailsViewField" id="enabled">
				<property name="title">Enabled?</property>
				<object class="SwatCheckCellRenderer" id="enabled_renderer">
					<property name="value" type="data">enabled</property>
				</object>
			</object>
			<object class="SwatDetailsViewField" id="groups">
				<property name="title">Groups</property>
				<object class="SwatTextCellRenderer" id="groups_renderer">
					<property name="value" type="data">groups</property>
				</object>
			</object>
		</widget>

		<widget class="SwatFrame" id="sub_frame">
			<property name="title" translatable="yes">Sub-Components</property>
			<widget class="SwatToolLink">
				<property name="title" translatable="yes">Create a New Sub-Component</property>
				<property name="link">AdminSubComponents/Edit?parent=%s</property>
				<property name="stock_id" type="string">create</property>
			</widget>
			<widget class="SwatToolLink" id="order_tool">
				<property name="title" translatable="yes">Change Sub-Component Order</property>
				<property name="link">AdminSubComponents/Order?parent=%s</property>
				<property name="stock_id" type="string">change-order</property>
			</widget>
			<widget class="SwatForm" id="index_form">
				<widget class="SwatTableView" id="index_view">
					<object class="SwatTableViewColumn" id="controls">
						<object class="AdminEditControlCellRenderer">
							<property name="link">AdminSubComponents/Edit?id=%s</property>
							<property name="value" type="data">id</property>
						</object>
					</object>
					<object class="SwatTableViewCheckboxColumn" id="checkbox">
						<object class="SwatCheckboxCellRenderer" id="items">
							<property name="value" type="data">id</property>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="title">
						<property name="title" translatable="yes">Title</property>
						<object class="SwatLinkCellRenderer">
							<property name="title" type="data" translatable="yes">title</property>
							<property name="link">AdminSubComponents/Edit?id=%s</property>
							<property name="value" type="data">id</property>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="shortname">
						<property name="title" translatable="yes">Short Name</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">shortname</property>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="show">
						<property name="title" translatable="yes">Show in Menu</property>
						<object class="SwatCheckCellRenderer">
							<property name="value" type="data">show</property>
						</object>
					</object>
				</widget>
				<widget class="SwatActions" id="index_actions">
					<widget class="SwatActionItem" id="delete">
						<property name="title" translatable="yes">delete...</property>
					</widget>
					<widget class="SwatActionItem" id="show">
						<property name="title" translatable="yes">show</property>
					</widget>
					<widget class="SwatActionItem" id="hide">
						<property name="title" translatable="yes">hide</property>
					</widget>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
