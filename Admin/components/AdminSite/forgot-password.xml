<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatFrame" id="forgot_password_frame">
		<property name="title" translatable="yes">Forgot Password</property>
		<widget class="SwatMessageDisplay" id="message_display" />
		<widget class="SwatForm" id="forgot_password_form">
			<widget class="SwatContainer" id="field_container">
				<widget class="AdminNote" id="note_display">
					<property name="content" translatable="yes">Forgot your password? No problem. Simply enter your email address and a link to create a new password will be sent to you.</property>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Email</property>
					<widget class="SwatEntry" id="email">
						<property name="required" type="boolean">true</property>
						<property name="size" type="integer">25</property>
					</widget>
				</widget>
				<widget class="SwatFooterFormField">
					<widget class="SwatButton" id="login_button">
						<property name="title" translatable="yes">Request a New Password</property>
					</widget>
				</widget>
			</widget>
		</widget>	
	</widget>
</swatml>
