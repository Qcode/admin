<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatMessageBox name="message_box" />
	<SwatFrame name="edit_frame" title="Edit User Profile">
		<SwatForm name="edit_form">

			<SwatFormField title="Name">
				<SwatEntry name="name" required="boolean:true" />
			</SwatFormField>
			
			<SwatFormField title="Password">
				<SwatPasswordEntry name="password" minlength="integer:4" />
			</SwatFormField>
			
			<SwatFormField title="Confirm Password" note="Leave Password fields blank for them to remain the same.">
				<SwatConfirmPasswordEntry name="confirmpassword" />
			</SwatFormField>
			
			<SwatFormField class="swat-form-footer">
				<SwatButton name="submit_button" title="Update Profile" />
			</SwatFormField>

		</SwatForm>
	</SwatFrame>
</SwatUI>
