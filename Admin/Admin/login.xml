<?xml version='1.0' standalone='yes'?>
<SwatLayout>
	<SwatFrame name="login_frame" title="Login">
		<SwatForm name="login_form">
			<SwatFormField title="Username">
				<SwatEntry name="username" required="bool:true" />
			</SwatFormField>
			
			<SwatFormField title="Password">
				<SwatPasswordEntry name="password" required="bool:true" />
			</SwatFormField>

			<SwatFormField class="swat-form-footer">
				<SwatButton name="login_button" title="Login &#187;" />
			</SwatFormField>

		</SwatForm>
	</SwatFrame>
</SwatLayout>
