<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" name="login_frame">
		<property name="title" value="Login" translatable="yes" />
		<widget class="SwatForm" name="login_form">
			<widget class="SwatFormField">
				<property name="title" value="Username" translatable="yes" />
				<widget class="SwatEntry" name="username">
					<property name="required" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" value="Password" translatable="yes" />
				<widget class="SwatPasswordEntry" name="password">
					<property name="required" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="class" value="swat-form-footer" />
				<widget class="SwatButton" name="login_button">
					<property name="title" value="Login Â»" translatable="yes" />
				</widget>
			</widget>
		</widget>
	</widget>
</swat-interface>