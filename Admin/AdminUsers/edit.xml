<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" value="User" translatable="yes" />
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" value="Name" translatable="yes" />
				<widget class="SwatEntry" id="name">
					<property name="required" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" value="Username" translatable="yes" />
				<widget class="AdminUniqueEntry" id="username">
					<property name="required" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatDisclosure" id="password_disclosure">
				<property name="title" value="Change Password" translatable="yes" />
				<property name="open" value="false" type="boolean" />
				<widget class="SwatFormField">
					<property name="title" value="Password" translatable="yes" />
					<widget class="SwatPasswordEntry" id="password">
						<property name="minlength" value="4" type="integer" />
					</widget>
				</widget>
				<widget class="SwatFormField" id="confirm_password_field">
					<property name="title" value="Confirm Password" translatable="yes" />
					<property name="note" value="Leave Password fields blank for them to remain the same." />
					<widget class="SwatConfirmPasswordEntry" id="confirm_password" />
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" value="Enabled" translatable="yes" />
				<widget class="SwatCheckbox" id="enabled">
					<property name="value" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" value="Belongs to Groups" translatable="yes" />
				<widget class="SwatCheckboxList" id="groups" />
			</widget>
			<widget class="SwatFormFooterField">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swat-interface>
