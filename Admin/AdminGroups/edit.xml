<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatMessageBox" id="message_box" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" value="Group" translatable="yes" />
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" value="Title" translatable="yes" />
				<widget class="SwatEntry" id="title">
					<property name="required" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatFrame">
		        <property name="title" value="Component Access" translatable="yes" />
				<!--widget class="SwatFormField">
					<property name="title" value="Components" translatable="yes" /-->
					<widget class="SwatCheckboxTree" id="components" />
				<!--/widget-->
			</widget>
			<widget class="SwatFrame">
		        <property name="title" value="Users in Group" translatable="yes" />
				<!--widget class="SwatFormField">
					<property name="title" value="Users" translatable="yes" /-->
					<widget class="SwatCheckboxList" id="users" />
				<!--/widget-->
			</widget>
			<widget class="SwatFormField">
				<property name="class" value="swat-form-footer" />
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swat-interface>
