<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatFrame name="edit_frame" title="Sub-Component">
		<SwatForm name="edit_form">

			<SwatFormField title="Title">
				<SwatEntry name="title" required="boolean:true" />
			</SwatFormField>
			
			<SwatFormField title="Short Name">
				<SwatEntry name="shortname" required="boolean:true" />
			</SwatFormField>
			
			<SwatFormField title="Show in menu?">
				<SwatCheckbox name="show" value="boolean:true" />
			</SwatFormField>

			<SwatFormField class="swat-form-footer">
				<SwatButton name="submit_button" />
			</SwatFormField>

		</SwatForm>
	</SwatFrame>
</SwatUI>
