<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="index_frame">
		<property name="title" value="Components" translatable="yes" />
		<widget class="SwatToolLink">
			<property name="title" value="Create a New Component" translatable="yes" />
			<property name="link" value="AdminComponents/Edit" />
		</widget>
		<widget class="SwatForm" id="index_form">
			<widget class="SwatTableView" id="index_view">
				<object class="SwatTableViewGroup">
					<property name="group_by" value="section" />
					<object class="AdminGroupHeaderCellRenderer">
						<property name="title" value="section_title" type="data" translatable="yes" />
						<property name="order_link" value="AdminComponents/Order?parent=%s" />
						<property name="order_value" value="section" type="data" />
					</object>
				</object>
				<object class="SwatTableViewColumn" id="controls">
					<object class="AdminEditControlCellRenderer">
						<property name="link" value="AdminComponents/Edit?id=%s" />
						<property name="value" value="componentid" type="data" />
					</object>
				</object>
				<object class="SwatTableViewCheckboxColumn" id="checkbox">
					<object class="SwatCheckboxCellRenderer" id="items">
						<property name="value" value="componentid" type="data" />
					</object>
				</object>
				<object class="AdminTableViewOrderableColumn" id="title">
					<property name="title" value="Title" translatable="yes" />
					<object class="SwatLinkCellRenderer">
						<property name="title" value="title" type="data" translatable="yes" />
						<property name="link" value="AdminComponents/Details?id=%s" />
						<property name="value" value="componentid" type="data" />
					</object>
				</object>
				<object class="AdminTableViewOrderableColumn" id="shortname">
					<property name="title" value="Short Name" translatable="yes" />
					<object class="SwatTextCellRenderer">
						<property name="value" value="shortname" type="data" />
					</object>
				</object>
				<object class="AdminTableViewOrderableColumn" id="show">
					<property name="title" value="Show in Menu" translatable="yes" />
					<object class="SwatCheckCellRenderer">
						<property name="value" value="show" type="data" />
					</object>
				</object>
				<object class="AdminTableViewOrderableColumn" id="enabled">
					<property name="title" value="Enabled" translatable="yes" />
					<object class="SwatCheckCellRenderer">
						<property name="value" value="enabled" type="data" />
					</object>
				</object>
			</widget>
			<widget class="SwatActions" id="index_actions">
				<widget class="SwatActionItem" id="delete">
					<property name="title" value="delete..." translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="show">
					<property name="title" value="show" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="hide">
					<property name="title" value="hide" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="enable">
					<property name="title" value="enable" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="disable">
					<property name="title" value="disable" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="change_section">
					<property name="title" value="change section..." translatable="yes" />
					<widget class="SwatFlydown" id="section">
						<property name="show_blank" value="false" type="boolean" />
					</widget>
				</widget>
			</widget>
		</widget>
	</widget>
</swat-interface>
