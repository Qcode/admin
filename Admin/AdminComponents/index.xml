<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatMessageBox" name="message_box" />
	<widget class="SwatFrame">
		<property name="title" value="Components" translatable="yes" />
		<widget class="SwatToolLink">
			<property name="title" value="Create a New Component" translatable="yes" />
			<property name="href" value="AdminComponents/Edit" />
		</widget>
		<widget class="SwatForm" name="index_form">
			<widget class="SwatTableView" name="index_view">
				<widget class="SwatTableViewGroup">
					<property name="group_by" value="section" />
					<widget class="AdminGroupHeaderCellRenderer">
						<property name="title" value="section_title" type="data" translatable="yes" />
						<property name="order_href" value="AdminComponents/Order?parent=%s" />
						<property name="order_value" value="section" type="data" />
					</widget>
				</widget>
				<widget class="SwatTableViewColumn" name="controls">
					<widget class="AdminDetailsControlCellRenderer">
						<property name="href" value="AdminComponents/Details?id=%s" />
						<property name="value" value="componentid" type="data" />
					</widget>
					<widget class="AdminEditControlCellRenderer">
						<property name="href" value="AdminComponents/Edit?id=%s" />
						<property name="value" value="componentid" type="data" />
					</widget>
				</widget>
				<widget class="SwatTableViewCheckboxColumn" name="checkbox">
					<widget class="SwatCheckboxCellRenderer" name="items">
						<property name="value" value="componentid" type="data" />
					</widget>
				</widget>
				<widget class="AdminTableViewOrderableColumn" name="title">
					<property name="title" value="Title" translatable="yes" />
					<widget class="SwatLinkCellRenderer">
						<property name="title" value="title" type="data" translatable="yes" />
						<property name="href" value="AdminComponents/Details?id=%s" />
						<property name="value" value="componentid" type="data" />
					</widget>
				</widget>
				<widget class="AdminTableViewOrderableColumn" name="shortname">
					<property name="title" value="Short Name" translatable="yes" />
					<widget class="SwatTextCellRenderer">
						<property name="value" value="shortname" type="data" />
					</widget>
				</widget>
				<widget class="AdminTableViewOrderableColumn" name="show">
					<property name="title" value="Show in Menu" translatable="yes" />
					<widget class="SwatCheckCellRenderer">
						<property name="value" value="show" type="data" />
					</widget>
				</widget>
				<widget class="AdminTableViewOrderableColumn" name="enabled">
					<property name="title" value="Enabled" translatable="yes" />
					<widget class="SwatCheckCellRenderer">
						<property name="value" value="enabled" type="data" />
					</widget>
				</widget>
			</widget>
			<widget class="SwatActions" name="index_actions">
				<widget class="SwatActionItem" name="delete">
					<property name="title" value="delete..." translatable="yes" />
				</widget>
				<widget class="SwatActionItem" name="show">
					<property name="title" value="show" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" name="hide">
					<property name="title" value="hide" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" name="enable">
					<property name="title" value="enable" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" name="disable">
					<property name="title" value="disable" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" name="change_section">
					<property name="title" value="change section..." translatable="yes" />
					<widget class="SwatFlydown" name="section">
						<property name="show_blank" value="false" type="boolean" />
					</widget>
				</widget>
			</widget>
		</widget>
	</widget>
</swat-interface>