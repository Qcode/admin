<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatMessageBox name="messagebox" />
	<SwatFrame title="Components">
		<SwatToolLink title="Create a New Component" href="AdminComponents/Edit" />

		<SwatForm name="indexform">
			<SwatTableView name="view">

				<SwatTableViewGroup group_by="section">
					<AdminCellRendererGroupHeader order_href="AdminComponents/Order?parent=%s" order_value="data:section">
						data:section_title
					</AdminCellRendererGroupHeader>
				</SwatTableViewGroup>

				<SwatTableViewColumn name="controls">
					<AdminCellRendererDetailsControl href="AdminComponents/Details?id=%s" value="data:componentid" />
					<AdminCellRendererEditControl href="AdminComponents/Edit?id=%s" value="data:componentid" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="checkbox">
					<SwatCellRendererCheckbox name="items" value="data:componentid" />
				</SwatTableViewColumn>

				<AdminTableViewOrderableColumn name="title" title="Title">
					<SwatCellRendererLink href="AdminComponents/Details?id=%s" value="data:componentid">
						data:title
					</SwatCellRendererLink>
				</AdminTableViewOrderableColumn>

				<AdminTableViewOrderableColumn name="shortname" title="Short Name">
					<SwatCellRendererText>data:shortname</SwatCellRendererText>
				</AdminTableViewOrderableColumn>

				<AdminTableViewOrderableColumn name="show" title="Show in Menu">
					<SwatCellRendererCheck value="data:show" />
				</AdminTableViewOrderableColumn>

				<AdminTableViewOrderableColumn name="enabled" title="Enabled">
					<SwatCellRendererCheck value="data:enabled" />
				</AdminTableViewOrderableColumn>

			</SwatTableView>
			<SwatActions name="actions">

				<SwatActionItem name="delete" title="delete" />
				<SwatActionItem name="show" title="show" />
				<SwatActionItem name="hide" title="hide" />
				<SwatActionItem name="enable" title="enable" />
				<SwatActionItem name="disable" title="disable" />

				<SwatActionItem name="changesection" title="change section...">
					<SwatFlydown name="section" />
				</SwatActionItem>

			</SwatActions>
		</SwatForm>
	</SwatFrame>
</SwatUI>
