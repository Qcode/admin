<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatMessageBox name="message_box" />
	<SwatFrame title="Components">
		<SwatToolLink title="Create a New Component" href="AdminComponents/Edit" />

		<SwatForm name="index_form">
			<SwatTableView name="index_view">

				<SwatTableViewGroup group_by="section">
					<AdminGroupHeaderCellRenderer title="data:section_title" 
						order_href="AdminComponents/Order?parent=%s" order_value="data:section" />

				</SwatTableViewGroup>

				<SwatTableViewColumn name="controls">
					<AdminDetailsControlCellRenderer href="AdminComponents/Details?id=%s" value="data:componentid" />
					<AdminEditControlCellRenderer href="AdminComponents/Edit?id=%s" value="data:componentid" />
				</SwatTableViewColumn>

				<SwatTableViewCheckboxColumn name="checkbox">
					<SwatCheckboxCellRenderer name="items" value="data:componentid" />
				</SwatTableViewCheckboxColumn>

				<AdminTableViewOrderableColumn name="title" title="Title">
					<SwatLinkCellRenderer title="data:title"
						href="AdminComponents/Details?id=%s" value="data:componentid" />

				</AdminTableViewOrderableColumn>

				<AdminTableViewOrderableColumn name="shortname" title="Short Name">
					<SwatTextCellRenderer value="data:shortname" />
				</AdminTableViewOrderableColumn>

				<AdminTableViewOrderableColumn name="show" title="Show in Menu">
					<SwatCheckCellRenderer value="data:show" />
				</AdminTableViewOrderableColumn>

				<AdminTableViewOrderableColumn name="enabled" title="Enabled">
					<SwatCheckCellRenderer value="data:enabled" />
				</AdminTableViewOrderableColumn>

			</SwatTableView>
			<SwatActions name="index_actions">

				<SwatActionItem name="delete" title="delete..." />
				<SwatActionItem name="show" title="show" />
				<SwatActionItem name="hide" title="hide" />
				<SwatActionItem name="enable" title="enable" />
				<SwatActionItem name="disable" title="disable" />

				<SwatActionItem name="change_section" title="change section...">
					<SwatFlydown name="section" show_blank="boolean:false" />
				</SwatActionItem>

			</SwatActions>
		</SwatForm>
	</SwatFrame>
</SwatUI>
