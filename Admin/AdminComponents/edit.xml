<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatFrame name="frame" title="Component">
		<SwatForm name="editform">

			<SwatFormField title="Title">
				<SwatEntry name="title" required="bool:true" />
			</SwatFormField>
			
			<SwatFormField title="Short Name">
				<SwatEntry name="shortname" required="bool:true" />
			</SwatFormField>
			
			<SwatFormField title="Section">
				<SwatFlydown name="section" />
			</SwatFormField>
			
			<SwatFormField title="Show in menu?">
				<SwatCheckbox name="show" value="bool:true" />
			</SwatFormField>

			<SwatFormField title="Enabled?">
				<SwatCheckbox name="enabled" value="bool:true" />
			</SwatFormField>

			<SwatFormField title="Description">
				<SwatTextarea name="description" />
			</SwatFormField>

			<SwatFormField title="Groups">
				<SwatCheckboxList name="groups" />
			</SwatFormField>

			<SwatFormField class="swat-form-footer">
				<SwatButton name="btn_submit" />
			</SwatFormField>

		</SwatForm>
	</SwatFrame>
</SwatUI>
