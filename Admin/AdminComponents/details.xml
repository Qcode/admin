<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="index_frame">

		<widget class="SwatToolLink">
			<property name="title" value="Edit Component" translatable="yes" />
			<property name="link" value="AdminComponents/Edit?id=%s" />
		</widget>
		<widget class="SwatDetailsView" id="component_details">
			<object class="SwatDetailsViewField" id="title">
				<property name="title" value="Title" />
				<object class="SwatTextCellRenderer" id="X">
					<property name="value" value="title" type="data" />
				</object>
			</object>
			<object class="SwatDetailsViewField" id="shortname">
				<property name="title" value="Short Name" />
				<object class="SwatTextCellRenderer" id="X">
					<property name="value" value="shortname" type="data" />
				</object>
			</object>
			<object class="SwatDetailsViewField" id="section">
				<property name="title" value="Section" />
				<object class="SwatTextCellRenderer" id="X">
					<property name="value" value="section_title" type="data" />
				</object>
			</object>
			<object class="SwatDetailsViewField" id="show">
				<property name="title" value="Show in Menu?" />
				<object class="SwatCheckCellRenderer" id="X">
					<property name="value" value="show" type="data" />
				</object>
			</object>
			<object class="SwatDetailsViewField" id="enabled">
				<property name="title" value="Enabled?" />
				<object class="SwatCheckCellRenderer" id="X">
					<property name="value" value="enabled" type="data" />
				</object>
			</object>
			<object class="SwatDetailsViewField" id="groups">
				<property name="title" value="Groups" />
				<object class="SwatTextCellRenderer" id="groups_renderer">
				</object>
			</object>
		</widget>

		<widget class="SwatFrame" id="sub_frame">
			<property name="title" value="Sub-Components" translatable="yes" />
			<widget class="SwatToolLink">
				<property name="title" value="Create a New Sub-Component" translatable="yes" />
				<property name="link" value="AdminSubComponents/Edit?parent=%s" />
			</widget>
			<widget class="SwatToolLink" id="order_tool">
				<property name="title" value="Change Sub-Component Order" translatable="yes" />
				<property name="link" value="AdminSubComponents/Order?parent=%s" />
			</widget>
			<widget class="SwatForm" id="index_form">
				<widget class="SwatTableView" id="index_view">
					<object class="SwatTableViewColumn" id="controls">
						<object class="AdminEditControlCellRenderer">
							<property name="link" value="AdminSubComponents/Edit?id=%s" />
							<property name="value" value="subcomponentid" type="data" />
						</object>
					</object>
					<object class="SwatTableViewCheckboxColumn" id="checkbox">
						<object class="SwatCheckboxCellRenderer" id="items">
							<property name="value" value="subcomponentid" type="data" />
						</object>
					</object>
					<object class="SwatTableViewColumn" id="title">
						<property name="title" value="Title" translatable="yes" />
						<object class="SwatLinkCellRenderer">
							<property name="title" value="title" type="data" translatable="yes" />
							<property name="link" value="AdminSubComponents/Edit?id=%s" />
							<property name="value" value="subcomponentid" type="data" />
						</object>
					</object>
					<object class="SwatTableViewColumn" id="shortname">
						<property name="title" value="Short Name" translatable="yes" />
						<object class="SwatTextCellRenderer">
							<property name="value" value="shortname" type="data" />
						</object>
					</object>
					<object class="SwatTableViewColumn" id="show">
						<property name="title" value="Show in Menu" translatable="yes" />
						<object class="SwatCheckCellRenderer">
							<property name="value" value="show" type="data" />
						</object>
					</object>
				</widget>
				<widget class="SwatActions" id="index_actions">
					<widget class="SwatActionItem" id="delete">
						<property name="title" value="delete..." translatable="yes" />
					</widget>
					<widget class="SwatActionItem" id="show">
						<property name="title" value="show" translatable="yes" />
					</widget>
					<widget class="SwatActionItem" id="hide">
						<property name="title" value="hide" translatable="yes" />
					</widget>
				</widget>
			</widget>
		</widget>
	</widget>
</swat-interface>
