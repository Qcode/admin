<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatMessageBox name="messagebox" />
	<SwatFrame name="frame">

		<SwatFrame name="subframe" title="Sub-Components">
			<SwatToolLink title="Create a New Sub-Component" href="AdminSubComponents/Edit?parent=%s" />
			<SwatToolLink title="Change Sub-Component Order" href="AdminSubComponents/Order?parent=%s" />
			<SwatForm name="indexform">
				<SwatTableView name="view">

					<SwatTableViewColumn name="controls">
						<SwatControlCellRenderer src="admin/images/b_edit.png" height="int:22" width="int:28" title="Edit" alt="Edit" href="AdminSubComponents/Edit?id=%s" value="data:subcomponentid" />
					</SwatTableViewColumn>

					<SwatTableViewCheckboxColumn name="checkbox">
						<SwatCheckboxCellRenderer name="items" value="data:subcomponentid" />
					</SwatTableViewCheckboxColumn>

					<SwatTableViewColumn name="title" title="Title">
						<SwatLinkCellRenderer title="data:title" href="AdminSubComponents/Edit?id=%s" value="data:subcomponentid" />
					</SwatTableViewColumn>

					<SwatTableViewColumn name="shortname" title="Short Name">
						<SwatTextCellRenderer value="data:shortname" />
					</SwatTableViewColumn>

					<SwatTableViewColumn name="show" title="Show in Menu">
						<SwatCheckCellRenderer value="data:show" />
					</SwatTableViewColumn>

				</SwatTableView>
				<SwatActions name="actions">

					<SwatActionItem name="delete" title="delete" />
					<SwatActionItem name="show" title="show" />
					<SwatActionItem name="hide" title="hide" />

				</SwatActions>
			</SwatForm>
		</SwatFrame>
	</SwatFrame>
</SwatUI>
