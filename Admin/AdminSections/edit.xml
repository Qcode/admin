<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatFrame" name="edit_frame">
		<property name="title" value="Section Edit" translatable="yes" />
		<widget class="SwatForm" name="edit_form">
			<widget class="SwatFormField">
				<property name="title" value="Title" translatable="yes" />
				<widget class="SwatEntry" name="title">
					<property name="required" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" value="Show in Menu?" translatable="yes" />
				<widget class="SwatCheckbox" name="show">
					<property name="value" value="true" type="boolean" />
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" value="Description" translatable="yes" />
				<widget class="SwatTextarea" name="description" />
			</widget>
			<widget class="SwatFormField">
				<property name="class" value="swat-form-footer" />
				<widget class="SwatButton" name="submit_button" />
			</widget>
		</widget>
	</widget>
</swat-interface>