<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatFrame name="frame" title="Section Edit">
		<SwatForm name="editform">
			<SwatFormField title="Title">
				<SwatEntry name="title" required="boolean:true" />
			</SwatFormField>
			
			<SwatFormField title="Show in Menu?">
				<SwatCheckbox name="show" value="boolean:true" />
			</SwatFormField>

			<SwatFormField title="Description">
				<SwatTextarea name="description" />
			</SwatFormField>

			<SwatFormField class="swat-form-footer">
				<SwatButton name="btn_submit" />
			</SwatFormField>

		</SwatForm>
	</SwatFrame>
</SwatUI>
