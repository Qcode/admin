<?xml version='1.0' standalone='yes'?>
<SwatLayout>
	<SwatFrame name="frame" title="Sections">
		<SwatTableView name="view">

			<SwatTableViewColumn name="controls">
				<SwatCellRendererControl src="XXX" alt="Details" href="AdminSections/Details?id=%s" id="data:sectionid" />
				<SwatCellRendererControl src="XXX" alt="Edit" href="AdminSections/Edit?id=%s" id="data:sectionid" />
			</SwatTableViewColumn>

			<SwatTableViewColumn name="checkbox">
				<SwatCellRendererCheckbox name="items[]" id="data:sectionid" />
			</SwatTableViewColumn>

			<SwatTableViewColumn name="title" title="Title">
				<SwatCellRendererLink text="data:title" href="AdminSections/Edit?id=%s" href_value="data:sectionid" />
			</SwatTableViewColumn>

			<SwatTableViewColumn name="hidden" title="Hidden">
				<SwatCellRendererCheck value="data:hidden" />
			</SwatTableViewColumn>

		</SwatTableView>
	</SwatFrame>
</SwatLayout>
