<?xml version='1.0' standalone='yes'?>
<SwatLayout>
	<SwatFrame title="Sections">
		<SwatForm name="indexform">
			<SwatTableView name="view">

				<SwatTableViewColumn name="controls">
					<SwatCellRendererControl src="admin/images/b_details.png" height="int:22" width="int:28" title="View Details" alt="Details" href="AdminSections/Details?id=%s" id="data:sectionid" />
					<SwatCellRendererControl src="admin/images/b_edit.png" height="int:22" width="int:28" title="Edit" alt="Edit" href="AdminSections/Edit?id=%s" id="data:sectionid" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="checkbox">
					<SwatCellRendererCheckbox name="items[]" id="data:sectionid" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="title" title="Title">
					<SwatCellRendererLink text="data:title" href="AdminSections/Edit?id=%s" href_value="data:sectionid" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="hidden" title="Hidden">
					<SwatCellRendererCheck value="data:hidden" />
				</SwatTableViewColumn>

			</SwatTableView>
		</SwatForm>
	</SwatFrame>
</SwatLayout>
