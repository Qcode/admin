<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatFrame title="Sections">
		<SwatToolLink title="Create a New Section" href="AdminSections/Edit" />
		<SwatForm name="indexform">
			<SwatTableView name="view">

				<SwatTableViewColumn name="controls">
					<SwatControlCellRenderer src="admin/images/b_details.png" height="int:22" width="int:28" title="View Details" alt="Details" href="AdminSections/Details?id=%s" value="data:sectionid" />
					<SwatControlCellRenderer src="admin/images/b_edit.png" height="int:22" width="int:28" title="Edit" alt="Edit" href="AdminSections/Edit?id=%s" value="data:sectionid" />
				</SwatTableViewColumn>

				<SwatTableViewCheckboxColumn name="checkbox">
					<SwatCheckboxCellRenderer name="items" value="data:sectionid" />
				</SwatTableViewCheckboxColumn>

				<SwatTableViewColumn name="title" title="Title">
					<SwatLinkCellRenderer title="data:title" href="AdminSections/Edit?id=%s" value="data:sectionid" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="title2" title="Title">
					<SwatTextCellRenderer value="data:title" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="show" title="Show in Menu">
					<SwatCheckCellRenderer value="data:show" />
				</SwatTableViewColumn>

			</SwatTableView>
			<SwatActions name="actions">
			<!--SwatActions name="actions" auto_reset="bool:true" show_blank_option="bool:false"-->

				<SwatActionItem name="delete" title="delete" />

				<SwatActionItem name="defibulate" title="defibulate">
					<SwatEntry name="title" />
				</SwatActionItem>

				<SwatActionItem name="show" title="show" />
				<SwatActionItem name="hide" title="hide" />

				<SwatActionItem name="setdate" title="set date">
					<SwatDateEntry name="date" />
				</SwatActionItem>

				<SwatActionItem name="setcolor" title="set color">
					<SwatFlydown name="color" />
				</SwatActionItem>

			</SwatActions>
		</SwatForm>
	</SwatFrame>
</SwatUI>
