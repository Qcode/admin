<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame">
		<property name="title" value="Sections" translatable="yes" />
		<widget class="SwatToolLink">
			<property name="title" value="Create a New Section" translatable="yes" />
			<property name="link" value="AdminSections/Edit" />
		</widget>
		<widget class="SwatToolLink" id="order_tool">
			<property name="title" value="Change Order" translatable="yes" />
			<property name="link" value="AdminSections/Order" />
		</widget>
		<widget class="SwatForm" id="index_form">
			<widget class="SwatTableView" id="index_view">
				<object class="SwatTableViewColumn">
					<object class="AdminDetailsControlCellRenderer">
						<property name="link" value="AdminSections/Details?id=%s" />
						<property name="value" value="sectionid" type="data" />
					</object>
					<object class="AdminEditControlCellRenderer">
						<property name="link" value="AdminSections/Edit?id=%s" />
						<property name="value" value="sectionid" type="data" />
					</object>
				</object>
				<object class="SwatTableViewCheckboxColumn" id="checkbox">
					<object class="SwatCheckboxCellRenderer" id="items">
						<property name="value" value="sectionid" type="data" />
					</object>
				</object>
				<object class="SwatTableViewColumn">
					<property name="title" value="Title" translatable="yes" />
					<object class="SwatLinkCellRenderer">
						<property name="title" value="title" type="data" translatable="yes" />
						<property name="link" value="AdminSections/Edit?id=%s" />
						<property name="value" value="sectionid" type="data" />
					</object>
				</object>
				<object class="SwatTableViewColumn">
					<property name="title" value="Show in Menu" translatable="yes" />
					<object class="SwatCheckCellRenderer">
						<property name="value" value="show" type="data" />
					</object>
				</object>
			</widget>
			<widget class="SwatActions" id="index_actions">
				<widget class="SwatActionItem" id="delete">
					<property name="title" value="delete..." translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="show">
					<property name="title" value="show" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="hide">
					<property name="title" value="hide" translatable="yes" />
				</widget>
			</widget>
		</widget>
	</widget>
</swat-interface>
