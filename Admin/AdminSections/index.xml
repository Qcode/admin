<?xml version='1.0' standalone='yes'?>
<SwatUI>
	<SwatFrame title="Sections">
		<SwatForm name="indexform">
			<SwatTableView name="view">

				<SwatTableViewColumn name="controls">
					<SwatCellRendererControl src="admin/images/b_details.png" height="int:22" width="int:28" title="View Details" alt="Details" href="AdminSections/Details?id=%s" value="data:sectionid" />
					<SwatCellRendererControl src="admin/images/b_edit.png" height="int:22" width="int:28" title="Edit" alt="Edit" href="AdminSections/Edit?id=%s" value="data:sectionid" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="checkbox">
					<SwatCellRendererCheckbox name="items" value="data:sectionid" />
				</SwatTableViewColumn>

				<SwatTableViewColumn name="title" title="Title">
					<SwatCellRendererLink href="AdminSections/Edit?id=%s" value="data:sectionid">
						data:title
					</SwatCellRendererLink>
				</SwatTableViewColumn>

				<SwatTableViewColumn name="title2" title="Title">
					<SwatCellRendererText>data:title</SwatCellRendererText>
				</SwatTableViewColumn>

				<SwatTableViewColumn name="hidden" title="Hidden">
					<SwatCellRendererCheck value="data:hidden" />
				</SwatTableViewColumn>

			</SwatTableView>
			<SwatActions name="actions">
			<!--SwatActions name="actions" auto_reset="bool:false" selected="defibulate"-->

				<SwatActionItem name="delete" title="delete" />

				<SwatActionItem name="defibulate" title="defibulate">
					<SwatEntry name="title" />
				</SwatActionItem>

				<SwatActionItem name="show" title="show" />
				<SwatActionItem name="hide" title="hide" />

				<SwatActionItem name="setdate" title="set date">
					<SwatDate name="date" />
				</SwatActionItem>

				<SwatActionItem name="setcolor" title="set color">
					<SwatFlydown name="color" />
				</SwatActionItem>

			</SwatActions>
		</SwatForm>
	</SwatFrame>
</SwatUI>
