<?xml version='1.0' standalone='yes'?>
<swat-interface>
	<widget class="SwatMessageBox" id="message_box" />
	<widget class="SwatFrame">
		<property name="title" value="Sections" translatable="yes" />
		<widget class="SwatToolLink">
			<property name="title" value="Create a New Section" translatable="yes" />
			<property name="href" value="AdminSections/Edit" />
		</widget>
		<widget class="SwatToolLink">
			<property name="title" value="Change Order" translatable="yes" />
			<property name="href" value="AdminSections/Order" />
		</widget>
		<widget class="SwatForm" id="index_form">
			<widget class="SwatTableView" id="index_view">
				<widget class="SwatTableViewColumn" id="controls">
					<widget class="SwatControlCellRenderer">
						<property name="src" value="admin/images/b_details.png" />
						<property name="height" value="22" type="integer" />
						<property name="width" value="28" type="integer" />
						<property name="title" value="View Details" translatable="yes" />
						<property name="alt" value="Details" />
						<property name="href" value="AdminSections/Details?id=%s" />
						<property name="value" value="sectionid" type="data" />
					</widget>
					<widget class="SwatControlCellRenderer">
						<property name="src" value="admin/images/b_edit.png" />
						<property name="height" value="22" type="integer" />
						<property name="width" value="28" type="integer" />
						<property name="title" value="Edit" translatable="yes" />
						<property name="alt" value="Edit" />
						<property name="href" value="AdminSections/Edit?id=%s" />
						<property name="value" value="sectionid" type="data" />
					</widget>
				</widget>
				<widget class="SwatTableViewCheckboxColumn" id="checkbox">
					<widget class="SwatCheckboxCellRenderer" id="items">
						<property name="value" value="sectionid" type="data" />
					</widget>
				</widget>
				<widget class="SwatTableViewColumn" id="title">
					<property name="title" value="Title" translatable="yes" />
					<widget class="SwatLinkCellRenderer">
						<property name="title" value="title" type="data" translatable="yes" />
						<property name="href" value="AdminSections/Edit?id=%s" />
						<property name="value" value="sectionid" type="data" />
					</widget>
				</widget>
				<widget class="SwatTableViewColumn" id="title2">
					<property name="title" value="Title" translatable="yes" />
					<widget class="SwatTextCellRenderer">
						<property name="value" value="title" type="data" />
					</widget>
				</widget>
				<widget class="SwatTableViewColumn" id="show">
					<property name="title" value="Show in Menu" translatable="yes" />
					<widget class="SwatCheckCellRenderer">
						<property name="value" value="show" type="data" />
					</widget>
				</widget>
			</widget>
			<widget class="SwatActions" id="index_actions">
				<widget class="SwatActionItem" id="delete">
					<property name="title" value="delete..." translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="defibulate">
					<property name="title" value="defibulate..." translatable="yes" />
					<widget class="SwatEntry" id="title" />
				</widget>
				<widget class="SwatActionItem" id="show">
					<property name="title" value="show" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="hide">
					<property name="title" value="hide" translatable="yes" />
				</widget>
				<widget class="SwatActionItem" id="setdate">
					<property name="title" value="set date..." translatable="yes" />
					<widget class="SwatDateEntry" name="date" />
				</widget>
				<widget class="SwatActionItem" id="setcolor">
					<property name="title" value="set color..." translatable="yes" />
					<widget class="SwatFlydown" id="color" />
				</widget>
			</widget>
		</widget>
	</widget>
</swat-interface>
